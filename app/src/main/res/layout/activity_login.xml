<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff77a4b3"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_login"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:background="@color/colorAssistantOne"
            android:clipToPadding="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingTop="30.0dip">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

            <com.oureda.thunder.pobooks.CustomView.MyTextView
                android:id="@+id/id_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54dp"
                android:layout_marginRight="54dp"
                android:layout_marginTop="10.0dip"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="4.0dip"
                android:hint="请输入邮箱/手机号"
                android:paddingLeft="0.0dip"
                android:singleLine="true"
                android:textColor="#fff8f8f8"
                android:textSize="12.0sp"
                app:labelColor="@color/colorMain"
                app:labelText="用户名"
                app:overlengthColor="@android:color/holo_red_light"
                app:preLineColor="@color/colorMain" />

            <com.oureda.thunder.pobooks.CustomView.MyTextView
                android:id="@+id/password_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="54dp"
                android:layout_marginRight="54.0dip"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="4.0dip"
                android:hint="············"
                android:paddingLeft="0.0dip"
                android:password="true"
                android:singleLine="true"
                android:textColor="#fff8f8f8"
                android:textSize="12.0sp"
                app:labelColor="@color/colorMain"
                app:labelText="密码"
                app:maxLength="12"
                app:overlengthColor="@android:color/holo_red_light"
                app:preLineColor="@color/colorMain" />

            <TextView
                android:id="@+id/forget_login"
                android:layout_width="100.0dip"
                android:layout_marginLeft="64dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="忘记密码"
                android:textSize="12sp"
                android:textColor="#fff8f8f8" />

            <android.support.v7.widget.CardView
                android:layout_width="252.0dip"
                android:layout_marginLeft="54dp"
                android:layout_marginRight="54dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/enter_login"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#ff24d5d5"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="#fff8f8f8"
                    android:textSize="16.0sp" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/register_new_login"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:text="注册一个新的用户"
                android:textColor="#fff8f8f8" />
            >
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
