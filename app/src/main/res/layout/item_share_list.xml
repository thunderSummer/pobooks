<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:orientation="horizontal"
    android:paddingLeft="10.0dip"
    android:paddingTop="10.0dip">

    <ImageView
        android:id="@+id/picture_share_book_room"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:src="@drawable/book_small" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_name_share_book_room"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_weight="1.0"
            android:text="哦哦鹅"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_author_share_book_room"
                android:layout_width="200.0dip"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:text="骆宾王著"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/time_author_share_book_room"
                android:layout_width="120.0dip"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/time_icon"
                android:gravity="right"
                android:textColor="@color/colorGrey"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/colorGrey"
            android:paddingBottom="20.0dip" />
    </LinearLayout>
</LinearLayout>