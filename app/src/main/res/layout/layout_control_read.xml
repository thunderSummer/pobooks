<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_read"
    android:layout_width="fill_parent"
    android:layout_height="254.0dip"
    android:layout_above="@id/bottom_main_read"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

 <LinearLayout
     android:orientation="vertical"
     android:layout_marginLeft="30dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:text="字体大小"
         android:textColor="@color/colorGrey"
         android:textSize="14.0sp" />

     <LinearLayout
         android:layout_marginTop="16dp"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="15.0dip"
         android:paddingRight="45.0dip">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginBottom="5.0dip"
             android:src="@drawable/aa" />

         <SeekBar
             android:id="@+id/size_change_sb_read"
             android:layout_width="0.0dip"
             android:layout_height="fill_parent"
             android:layout_weight="1.0"
             android:max="60"
             android:maxHeight="5.0dip"
             android:minHeight="5.0dip" />

         <TextView
             android:id="@+id/size_show_tv_read"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:gravity="center"
             android:text="60"
             android:textColor="@color/colorGrey"
             android:textSize="18.0sp" />
     </LinearLayout>

     <TextView
         android:layout_marginTop="16dp"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="字体间距"
         android:textColor="@color/colorGrey"
         android:textSize="14.0sp" />

     <LinearLayout
         android:paddingBottom="4dp"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="16dp"
         android:orientation="horizontal"
         android:paddingLeft="15.0dip"
         android:paddingRight="45.0dip">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/spacing" />

         <SeekBar
             android:id="@+id/padding_change_sb_read"
             android:layout_width="0.0dip"
             android:layout_height="fill_parent"
             android:layout_weight="1.0"
             android:maxHeight="5.0dip"
             android:maxWidth="5.0dip" />

         <TextView
             android:id="@+id/padding_show_tv_read"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:gravity="center"
             android:text="60"
             android:textColor="@color/colorGrey"
             android:textSize="18.0sp" />
     </LinearLayout>

     <TextView
         android:layout_marginTop="16dp"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="背景颜色"
         android:textColor="@color/colorGrey"
         android:textSize="14.0dip" />
 </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/color1"
            android:id="@+id/color1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/color2"
            android:id="@+id/color2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/color3"
            android:id="@+id/color3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/color4"
            android:id="@+id/color4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/color5"
            android:id="@+id/color5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>