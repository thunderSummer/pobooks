<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/drawer_book_city"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_book_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10.0dip"
                android:src="@drawable/ic_menu" />

            <EditText
                android:id="@+id/search_book_city_et"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_weight="1.0"
                android:hint="搜索"
                android:textColorHint="@color/colorWhite"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/search_book_city_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10.0dip"
                android:src="@drawable/search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip">

            <TextView
                android:id="@+id/sort_book_city"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="分类"
                android:textColor="@color/colorWhite"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/new_book_city"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="新书榜"
                android:textColor="@color/colorWhite"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/free_book_city"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="免费榜"
                android:textColor="@color/colorWhite"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/create_book_city"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="原创榜"
                android:textColor="@color/colorWhite"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/listen_book_city"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="听书榜"
                android:textColor="@color/colorWhite"
                android:textSize="16.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/underline_book_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="1.0dip"
            android:scaleType="matrix"
            android:src="@drawable/rectangle4" />

        <com.oureda.thunder.pobooks.CustomView.MyViewPager
            android:id="@+id/viewPage_book_city"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>

    <com.oureda.thunder.pobooks.CustomView.MyNavigationView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="start" />
</android.support.v4.widget.DrawerLayout>