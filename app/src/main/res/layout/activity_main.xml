<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout_main"
    tools:context="com.oureda.thunder.pobooks.activity.main.MainActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="8dp">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                app:theme="@style/ToolBarTheme"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="enterAlways|scroll|snap">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:id="@+id/swift_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/book_list_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20.0dip" />
        </LinearLayout>

        <com.oureda.thunder.pobooks.CustomView.CombineFAB
            android:id="@+id/combine_main"
            android:layout_width="wrap_content"
            android:layout_height="400.0dip"
            android:layout_gravity="bottom|center|right" />

        <LinearLayout
            android:id="@+id/bottom_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/check_all_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="全选" />

            <ImageView
                android:id="@+id/share_main"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/share_button" />

            <ImageView
                android:id="@+id/delete_main"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/delete_button" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

<com.oureda.thunder.pobooks.CustomView.MyNavigationView
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:layout_height="match_parent"/>
</android.support.v4.widget.DrawerLayout>
